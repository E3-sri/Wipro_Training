package Cls_work;
import java.util.HashMap;


class Patient
{
	private int id;
	private String name;
	private String disease;
	
	public Patient(int id,String name, String disease)
	{
		this.id=id;
		this.name=name;
		this.disease=disease;
	}
		
		public int getID()
		{
			return id;
		}
		
		public String getName()
		{
			return name;
		}
		
		public String getDisease()
		{
			return disease;
		}
		
		public String toString()
		{
			return "Patient [ID: " + id + ", Name : " + name + ", Disease : " + disease "]";
	    }
					
		}

	}
	


public class HospitalMapping
{
	 public static void main(String[] args)
	 {
		 HashMap<Integer,String> patientMap =new HashMap<>();
		 
		 //To add patients
		 
		 patientMap.put(101, "Sree");
		 patientMap.put(102, "Lakshmi");
		 patientMap.put(103, "Chaturvedula");
		 
		 
		 //Get Patient ID
		 
		 System.out.println(patientMap.get(103));
		 
		 
		 //To check if ID Exists
		 
		 System.out.println(patientMap.containsKey(102));
		 
		 
		 //To remove the patient
		 
		 System.out.println(patientMap.remove(102));
		 
		 
		 //System.out.println(patientMap.get("Lakshmi"));	 

		
	 }
}
