package JDBC;
import java.sql.*;

import java.sql.DriverManager;

public class DBConnectivity
{

	public static void main(String[] args)
	{
		String userName="root";
		String userPwd="";
		String url="";
		
		try
		{	//to load JDBC driver and give the path in "".
			
			Class.forName("");  //Class is--->mysql driver class is registered with DriverManager.
			
			//Establish a connection and "" in that String will be given.
			
			//Driver manager is used to load the drivers into DataBase.
			
			Connection con=DriverManager.getConnection("com.mysql.cj.jdbc.Driver",userName,Hyma@2002);    //pwd is which you set to 'MySql'.
			
			System.out.println("Connected Successfully");
			
			Statement stmt =con. createStatement();   // To create sql statement
			
			con.close();   // closes the connection . To avoid memory lekage.
		}
		
		catch(Exception e)
		{
			e.printStackTrace();
		}
	}

}
