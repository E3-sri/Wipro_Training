package Cls_work;
import java.util.HashMap;
import java.util.Map;

class Patient {
    private int id;
    private String name;
    private String disease;

    public Patient(int id, String name, String disease) {
        this.id = id;
        this.name = name;
        this.disease = disease;
    }

    @Override
    public String toString() {
        return "Patient ID: " + id + ", Name: " + name + ", Disease: " + disease;
    }
}

public class HashMapDemo {
    public static void main(String[] args) {
        // Step 1: Create a HashMap
        HashMap<Integer, Patient> patientMap = new HashMap<>();

        // Step 2: Add patients using put()
        patientMap.put(101, new Patient(101, "Renu", "Cold"));
        patientMap.put(102, new Patient(102, "Sai", "Fever"));
        patientMap.put(103, new Patient(103, "Mahasa", "Flu"));

        // Step 3: Retrieve a patient using get()
        System.out.println(" Get Patient With ID 102:");
        System.out.println(patientMap.get(102));

        // Step 4: Check existence using containsKey()
        System.out.println("\n Does Patient With ID 101 exist?");
        System.out.println(patientMap.containsKey(101)); // true

        System.out.println("\n Does Patient With ID 104 exist?");
        System.out.println(patientMap.containsKey(104)); // false

        // Step 5: Check the size of the map
        System.out.println("\n Total Patients:");
        System.out.println(patientMap.size());

        // Step 6: Update a patient (overwrite same key)
        System.out.println("\n Update Patient With ID 102:");
        
        patientMap.put(102, new Patient(102, "Sai Krishna", "Typhoid"));
               
        System.out.println(patientMap.get(102));  // Updated details

        // Step 7: Check if map is empty
        System.out.println("\n Is the patient map empty?");
        
        System.out.println(patientMap.isEmpty()); // false

        // Step 8: Retrieve all patients using entrySet()
        System.out.println("\n All Patients in the System:");
        
        for (Map.Entry<Integer, Patient> entry : patientMap.entrySet())
        {
            System.out.println("Key: " + entry.getKey() + ", Value: " + entry.getValue());
        }
    }
}